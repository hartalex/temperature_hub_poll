{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "temperature_hub_poll",
    "labels": {
      "app": "temperature_hub_poll",
      "version": "v1"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "temperature_hub_poll"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "temperature_hub_poll"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "application",
            "image": "gcr.io/hartonline-cloud/temperature_hub_poll:(TRAVIS_COMMIT)",
            "resources": {
              "limits": {
                "cpu": ".05",
                "memory": "100Mi"
              }
            },
            "env": [
              {
                "name": "slackUrl",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "temperature-hub-poll-secret",
                    "key": "slackUrl"
                  }
                }
              }
            ]
          }
        ]
      }
    }
  }
}
